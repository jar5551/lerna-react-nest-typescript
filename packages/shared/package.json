{
  "name": "@project/shared",
  "description": "Shared frontend components",
  "version": "1.0.0",
  "author": "Jaros≈Çaw Frydrych <jarek.frydrych@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts*'",
    "del-dist": "del-cli dist",
    "prebuild": "yarn del-dist",
    "build": "tsc"
  },
  "peerDependencies": {
    "react": "^16.x",
    "react-dom": "^16.x"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.9",
    "@types/jest": "24.0.15",
    "@types/node": "^10.0.4",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "css-loader": "^0.28.7",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "file-loader": "^0.11.2",
    "glob-loader": "^0.3.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "style-loader": "^0.19.0",
    "ts-loader": "^2.3.7",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.3"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupFiles": [
      "./config/jest/test-shim.ts",
      "./config/jest/test-setup.ts"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/config/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true
  }
}
